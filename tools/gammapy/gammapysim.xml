<tool id="gammapysim" name="gammapysim" version="0.1.0+galaxy0" profile="21.05">
    <requirements>
        <requirement type="package" version="5.2.2">astropy</requirement>
        <requirement type="package" version="1.1.0">gammapy</requirement>
        <requirement type="package" version="4.64.1">tqdm</requirement>
        <requirement type="package" version="1.10.8">pydantic</requirement>
        <requirement type="package" version="8.7.0">ipython</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python --version;
        gammapy download datasets;
        mv -fv gammapy-datasets/* gammapy-data;
        python gammapysim.py --livetime-hr $livetime_hours --output-events $events --output-peek-png $peek_png;
    ]]></command>
<configfiles>
    <configfile name="gammapysim.py"></configfile>
</configfiles>


    <inputs>
        <param type="float" name="livetime_hours" label="Livetime, hours" value="1"/>
    </inputs>
    <outputs>
        <data name="events" format="fits"/>
        <data name="peek_png" format="png" label="peek"/>
    </outputs>
    <tests>
        <test>
            <param name="livetime_hours" value="1"/>
            <output name="events" file="events.fits"/>
            <output name="peek_png" file="peek.png"/>
        </test>
    </tests>
    <help><![CDATA[
        This tool synthesises CTA events with gammpy
    ]]></help>
    <citations>
        <citation type="doi">
            10.5281/zenodo.4701488
        </citation>
    </citations>
</tool>
